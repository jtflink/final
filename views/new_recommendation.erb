<h1 class="mb-5">Add A New Recommendation For <%= @place[:title] %></h1>

<form action="/places/<%= @place[:id] %>/recommendations/create" method="post">
  <div class="form-group">
    <label>Recommendations</label>
    <textarea class="form-control" rows="3" name="recommendations"></textarea>
  </div>
  <button type="submit" class="btn">Submit</button>
</form>